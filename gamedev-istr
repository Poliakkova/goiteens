using System;

class Program {
  public static void Main (string[] args) {
    //1. Виведемо фразу на екран
    //Функція Console.WriteLine() друкує на консоль все, що знаходиться в дужках
    //Кожен рядок або фраза, яку ми хочемо використати повинна знаходитись в подвійних лапках ""
    
    Console.WriteLine ("Как вас зовут?");
    
    // 2. Створюємо змінну, в якій буде знаходитись наше імʼя
    //Змінна - це елемент в програмуванні, який містить якісь дані, наприклад, число або рядок
    //Імʼя змінної може бути будь-яке, тут name
    //Кожна змінна має тип данних, які в ній знаходяться. String - це тип данних, означає, що в змінній буде рядок або фраза
    //Функція Console.ReadLine() читає все, що буде написано в консолі
    //Через = записуємо дані з консолі у змінну
    
    String name = Console.ReadLine();
    
    //3. Надрукуємо наше імʼя на консоль
    //Через + ми можемо обʼєднати текст зі значенням змінної
    
    Console.WriteLine("Ваше имя: "+name);
    
    //4. Створюємо випадкове число
    //Random - це також такий тип даних, а rnd - також змінна. З неї ми зможемо взяти випадкове число
    Random rnd = new Random();
    
    //Створюємо змінну, що міститиме це випадкове число. Тип даних int означає, що тут буде ціле число.
    //За допомогою . ми можемо отримати всі функції, які є у змінної типу Random, наприклад Next()
    //Функція Next бере випадкове число з діапазону у дужках. При цьому друге число не включно, тобто тут будуть числа 0,1,2,3
    int n = rnd.Next(0,4);
    
    Console.WriteLine("Введит число");
    //5. Функція Console.ReadLine() зчитує саме рядок, тому щоб отримати з неї число треба конвертувати за допомогою функції Convert.ToInt32()
    int player = Convert.ToInt32(Console.ReadLine());

    //Робимо умову - якщо наше значення = випадковому значенню за допомогою if
    //Щоб порівняти числа пишемо ==
    if (n == player){
      Console.WriteLine("Угадали!");
    //Що буде, якщо умова не виконається прописуємо за допомогою else
    }  else {
      Console.WriteLine("Не угадали! Правильный ответ: "+n);
    }
  }
}
